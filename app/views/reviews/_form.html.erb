
<%= form_with(model: [@restaurant, @review]) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, class: 'form-control', in: 1..5 %>
  </div>
  <div class="form-group">
    <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
  </div>
<% end %>
